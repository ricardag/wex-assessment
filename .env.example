# ===========================================
# Wex - Environment Variables Template
# ===========================================
# Copy this file to .env and fill in with real values

# JWT Configuration (you can generate a secure random string for this using "openssl rand -hex 32")
JWT_SECRET=your-safe-secret-here

# MySQL/MariaDB Configuration
MARIADB_HOST=127.0.0.1
MARIADB_PORT=3306
MARIADB_DATABASE=wex_db
MARIADB_USER=wex_user
MARIADB_PASSWORD=your_secure_password_here
MARIADB_ROOT_PASSWORD=your_root_password_here

# Authentication Configuration
AUTH_USERNAME=an-acceptable-username
AUTH_PASSWORD=an-acceptable-password
